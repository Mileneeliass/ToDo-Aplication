@model ToDoModel
@{
    ViewData["Title"] = "Confirm Delete";
}
<div class="text-center">
    <h3>
        Are you sure you want to delete ToDo (@Model.Name) ?
    </h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="" asp-route-id="@Model.Id" asp-action="Delete0">Confirm</a>
<a class="btn btn-danger" role="button" asp-controller="" asp-action="Index">Cancel</a>